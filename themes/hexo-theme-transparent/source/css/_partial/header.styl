#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  a
    color #FFFFFF
    &:hover
      color color-link
      text-decoration none
  h1
  h2
    display inline-block
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 1.5em
    line-height 1
  
  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      list-style none
      li
        float left
        margin-left 30px